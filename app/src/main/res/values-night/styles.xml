<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>


    </style>
    <style name="AppBottomSheetTheme" parent="BottomSheetDialog" />

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalDialogStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="AppModalDialogStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_bottomsheet_dialog</item>
        <item name="android:windowIsFloating">false</item>
    </style>



    <!-- MaterialSearchBarDarkTheme-->
    <style name="MaterialSearchBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="mt_searchBarColor">@color/searchBarPrimaryColorDark</item>
        <item name="mt_dividerColor">@color/searchBarDividerColorDark</item>
        <item name="mt_navIconTint">@color/searchBarNavIconTintColorDark</item>
        <item name="mt_searchIconTint">@color/searchBarSearchIconTintColorDark</item>
        <item name="mt_clearIconTint">@color/searchBarClearIconTintColorDark</item>
        <item name="mt_menuIconTint">@color/searchBarMenuIconTintColorDark</item>
        <item name="mt_backIconTint">@color/searchBarBackIconTintColorDark</item>
        <item name="mt_textCursorTint">@color/colorAccent</item>
        <item name="mt_textColor">@color/searchBarTextColorDark</item>
        <item name="mt_hintColor">@color/searchBarHintColorDark</item>
        <item name="hintTextColor">@color/white</item>
        <item name="mt_placeholderColor">@color/searchBarPlaceholderColorDark</item>
        <item name="mt_highlightedTextColor">@color/searchBarTextHighlightColorDark</item>
    </style>


    <style name="app_bg">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_theme">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>